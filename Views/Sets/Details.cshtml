@model _1001.DjSet

@{
    ViewData["Title"] = "Set Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Sets</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
            
            <h1 class="display-5">@Model.Title</h1>
            <h3 class="text-muted">by @Model.Artist.DisplayName</h3>
            
            <div class="mt-3">
                <span class="badge bg-primary me-2"><i class="bi bi-calendar"></i> @(Model.SetDatetime?.ToString("D") ?? "Unknown Date")</span>
                <span class="badge bg-secondary me-2"><i class="bi bi-geo-alt"></i> @(Model.Venue?.Name ?? "Unknown Venue")</span>
                <span class="badge bg-success"><i class="bi bi-ticket"></i> @(Model.SetAnalytics?.TicketsSold?.ToString("N0") ?? "0") Tickets</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="bi bi-music-note-list"></i> Tracklist</h4>
                </div>
                <div class="card-body p-0">
                    @if (Model.SetSongs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var setSong in Model.SetSongs)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-music-note text-muted me-2"></i>
                                        <strong>@setSong.Song.Title</strong>
                                        @if (setSong.Song.SongArtists.Any())
                                        {
                                            <span class="text-muted"> - @string.Join(", ", setSong.Song.SongArtists.Select(sa => sa.Artist.DisplayName))</span>
                                        }
                                    </div>
                                    @if(setSong.Song.Bpm.HasValue)
                                    {
                                        <span class="badge bg-light text-dark">@setSong.Song.Bpm BPM</span>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            No tracks listed for this set.
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Analytics</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <strong>Gross Revenue:</strong> 
                            <span class="float-end">@(Model.SetAnalytics?.GrossRevenue?.ToString("C0") ?? "N/A")</span>
                        </li>
                        <li class="mb-2">
                            <strong>Attendance:</strong> 
                            <span class="float-end">@(Model.SetAnalytics?.AttendanceCount?.ToString("N0") ?? "N/A")</span>
                        </li>
                        <li>
                            <strong>Likes:</strong> 
                            <span class="float-end">@(Model.SetAnalytics?.LikeCount?.ToString("N0") ?? "0")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
