@model IEnumerable<_1001.DjSet>

@{
    ViewData["Title"] = "All DJ Sets";
}

<h1>All DJ Sets</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Date/Time</th>
            <th>Duration (min)</th>
            <th>Venue</th>
            <th>Source</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var set in Model)
    {
        <tr>
            <td>@set.Title</td>
            <td>@set.Artist?.DisplayName</td>
            <td>@(set.SetDatetime?.ToString("yyyy-MM-dd HH:mm"))</td>
            <td>@set.DurationMinutes</td>
            <td>@set.Venue?.Name</td>
            <td>
                @if (!string.IsNullOrEmpty(set.SourceUrl))
                {
                    <a href="@set.SourceUrl" target="_blank">Link</a>
                }
            </td>
            <td>
                <a asp-controller="TrackList" asp-action="Sets" asp-route-id="@set.DjSetId">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
