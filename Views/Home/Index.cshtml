@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold mb-4">Welcome to 1001Tracklists</h1>
    <p class="lead mb-5">Discover the best DJ sets, tracklists, and analytics from around the world.</p>
    
    <div class="row justify-content-center gap-3">
        <div class="col-md-4">
            <div class="card p-4 h-100">
                <div class="card-body">
                    <i class="bi bi-disc display-1 text-primary mb-3"></i>
                    <h3>Browse Sets</h3>
                    <p>Explore our extensive collection of DJ sets and performances.</p>
                    <a asp-controller="Sets" asp-action="Index" class="btn btn-outline-primary">View Sets</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 h-100">
                <div class="card-body">
                    <i class="bi bi-plus-circle display-1 text-success mb-3"></i>
                    <h3>Add New Set</h3>
                    <p>Contribute to the database by adding new sets and tracklists.</p>
                    <a asp-controller="Sets" asp-action="Create" class="btn btn-outline-success">Add Set</a>
                </div>
            </div>
        </div>
    </div>
</div>
